<div right=20px>
	<h1><%= @challenge.title %></h1>

	<%= form_for @challenge do |c| %>
		<div>
			<%= c.label @challenge.description, class: "label-name" %>
			<%= c.text_area :body, size:"60x20", class: "form-control"  %>
		</div>

		<div>
			<%= c.submit "Submit!", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>