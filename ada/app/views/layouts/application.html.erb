<!DOCTYPE html>
<html>
<head>
  <title>Ada</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="icon">
		<a href="http://localhost:3000/#">
			<img src="/ada_logo.png" height="100" width="238.6" />
		</a>
	</div>
	<div class="top-bar-right">
		<img src="/top_bar_right2.png" height="100" width="279.25"/>
	</div>
	<div class="top-bar-middle">
	</div>
    <% if user_signed_in? %>
		<div class="container">		
			<ul class="nav nav-tabs">
			  <li role="presentation"> <%= link_to "Home", root_url %></li>
			  <li role="presentation"> <%= link_to "Account", edit_user_registration_path %></li>
			  <li role="presentation"> <%= link_to "Sign Out", destroy_user_session_path %>
			  </li>
			</ul>
	    </div>

	    <% end %>

<%= yield %>

</body>
</html>
